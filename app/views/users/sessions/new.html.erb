<body>

    <div class="jumbotron2">
      <br>
      <br>
      <br>
      <br>      <br>
            <br>      <br>
                  <br>
      <div class="container page-wrap">
          	<div class="row">
      			<div class="col-md-6 col-md-offset-3">
      				<div class="panel panel-login">
      					<div class="panel-heading">
      						<div class="row">
      							<div style="text-align:center" class="col-xs-12">
      								<h2><a  class="active" id="login-form-link">职由登录</a></h2>
                     <hr>
                    </div>
      						</div>

      					</div>
      					<div class="panel-body">
      						<div class="row">
      							<div class="col-lg-12">
                      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                      <div class="form-inputs">
          <!-- <div class="form-inputs"> -->
            <%= f.input :email, required: false, autofocus: true, :label => "邮箱", placeholder: "请输入您的邮箱", type: "email", value: "", name: "user[email]", id: "user_email", input_html: { class: "string email optional form-control"}%>

          <!-- </div> -->
        </div>
        <div class="form-inputs">
            <%= f.input :password, required: false, :label => "密码",placeholder: "请输入您的密码", type: "password", name: "user[password]", id: "user_password", input_html: { class: "form-group password optional user_password"}%>
        </div>
      									<div class="form-group text-center">
                          <%= f.input :remember_me, type:"checkbox", tabindex:"3", class:"", name:"remember",id:"remember",\
                                       as: :boolean if devise_mapping.rememberable? %>
      									</div>
      									<div class="form-group">
      										<div class="row">
      											<div class="col-sm-6 col-sm-offset-3">
                               <div class="form-actions">
                                 <%= f.button :submit, type:"submit", name:"login-submit", id:"login-submit", tabindex:"4",\
                                               class:"form-control btn btn-login", value:"登录" %>
                               </div>
      											</div>
      										</div>
      									</div>
      									<div class="form-group">
      										<div class="row">
      											<div class="col-lg-12">
      												<div class="text-center">
                                <%= render "devise/shared/links" %>
      												</div>
      											</div>
      										</div>
      									</div>
                      <% end %>
      							</div>
      						</div>
      					</div>
      				</div>
      			</div>
      		</div>
      	</div>

<br>
