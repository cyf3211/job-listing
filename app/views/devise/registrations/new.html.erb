<body>

    <div class="jumbotron1">
      <br>
      <br>
      <br>
      <br>      <br>
            <br>      <br>
                  <br>
<div class="container page-wrap">

    	<div class="row">
			<div class="col-md-6 col-md-offset-3">
				<div class="panel panel-login">
					<div class="panel-heading">
						<div class="row">
              <div style="text-align:center" class="col-xs-12">
                <h2><a  class="active" id="login-form-link">职由注册</a></h2>
               <hr>
              </div>
						</div>

					</div>
					<div class="panel-body">
						<div class="row">
							<div class="col-lg-12">
                <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= f.error_notification %>
                  <div class="form-inputs">
            <%= f.input :email, required: true, autofocus: true, label: "电子邮箱", placeholder: "请输入电子邮箱", type: "email", value: "", name: "user[email]", id: "user_email", input_html: { class: "string email required form-control" } %>
            <%= f.input :password, required: true, label: "密码", placeholder: "密码至少6位", type: "password", name: "user[password]", id: "user_password", input_html: { class: "form-group password required user_password"} %>
            <%= f.input :password_confirmation, required: true, label: "密码确认", placeholder: "再输入一遍确认密码", type: "password", name: "user[password_confirmation]", id: "user_password_confirmation", input_html: { class: "form-group password required user_password_confirmation"} %>
          </div>
								<div class="form-group">
										<div class="row">
											<div class="col-sm-6 col-sm-offset-3">
                          <div class="form-actions">
                            <%= f.button :submit, "马上注册" , class:"form-control btn btn-register"%>
                          </div>
											</div>
										</div>
									</div>
                <% end %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

  <br>
  <br>
  <br>
  <br>
  <br>      <br>
        <br>
        <br>
        <br>    <br>
</div>
</body>
